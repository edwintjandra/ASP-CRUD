@model IEnumerable<itdiv_mini_project.Models.Category>
 
@{
    ViewData["Title"] = "Index";
}

<h1>Product Categories</h1>

 
<a class="btn btn-primary btn-md" style="margin-bottom:10px" asp-action="Create">Add Category</a>
 
<table class="styled-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                 <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                  <a class="btn btn-primary btn-sm" id="openPopupButton" href="#">Testing</a>
                </td>
        </tr>
}
    </tbody>
</table>



<div id="popupBackground" class="popup-background"></div>
<div id="popupDialog" class="popup-dialog">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
    <button id="closePopupButton">Close</button>
</div>

<script>
    if (typeof $ !== "undefined" || typeof jQuery !== "undefined") {
        // jQuery is available on this page
        console.log("jQuery is available.");
    } else {
        // jQuery is not available on this page
        console.log("jQuery is not available.");
    }

    $(document).ready(function () {
        alert("test");
        $("#openPopupButton").click(function () {
            $("#popupBackground").show();
            $("#popupDialog").show();
        });

        $("#closePopupButton").click(function () {
            $("#popupBackground").hide();
            $("#popupDialog").hide();
        });
    });
</script>