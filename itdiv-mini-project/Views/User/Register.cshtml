@page
 

<form method="post" action="/User/Registration" id="registrationForm" class="form">
    @Html.AntiForgeryToken() 
    <div class="form-header">
        <p class="header-text">Register</p>
    </div>
    <div class="form-body">
        <div>
            <label>Name</label>
            <input type="text" name="Name" placeholder="Name" />
        </div>
        <div>
            <label>Email</label>
            <input type="text" name="Email" placeholder="email" />
        </div>
        <div>
            <label>Password</label>
            <input type="password" name="Password" placeholder="password" />
        </div>
        <div>
            <label>Confirm Password</label>
            <input type="password" name="" placeholder="Confirm password" id="confirmedPassword" />
        </div>
        <div>
            <label for="TocConfirmation"></label>
            <input type="checkbox" name="TocConfirmation" id="TocConfirmation" /> By Clicking register, i agree to the terms and conditions
        </div>
        <div>
            <label></label>
            <button>submit</button>
        </div>
      
    </div>
    
  
</form>


<script>
    document.getElementById("registrationForm").addEventListener("submit", function (event) {
         var name = document.querySelector("[name='Name']").value;
        var email = document.querySelector("[name='Email']").value;
        var password = document.querySelector("[name='Password']").value;
        var confirmPassword = document.getElementById("confirmedPassword").value;
        var emailPattern = /^[A-Za-z0-9]+@@[A-Za-z0-9]+\.com$/;
        var tocConfirmation = document.getElementById("TocConfirmation").checked;

        if (name.trim() === "") {
            alert("Name is required.");
            event.preventDefault();
        }
 
        if (email.trim() === "" || !email.match(emailPattern)) {
            alert("Invalid email address.");
            event.preventDefault();
        }

        if (password.trim() === "") {
            alert("Password is required.");
            event.preventDefault();
        }

        if (password !== confirmPassword) {
            alert("Password and Confirm Password do not match.");
            event.preventDefault();
        }

        if (!tocConfirmation) {
            alert("Please agree to the Terms of Service.");
            event.preventDefault();
        }
       
    });
</script>