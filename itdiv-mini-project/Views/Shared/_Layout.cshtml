<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - itdiv_mini_project</title>
     <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;300;400&display=swap" rel="stylesheet">
    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

 </head>
<body>
    <header>
        <nav class="my-navbar">
            <div class="container"> 
                <a class="my-brand" asp-area="" asp-controller="Home" asp-action="Index">Wearhouse</a>
                    <div class="my-burger-menu">
                        <div class="burger-bar"></div>
                        <div class="burger-bar"></div>
                        <div class="burger-bar"></div>
                    </div>
                
                <ul class="my-nav-list">
                    <li><a asp-area="" asp-controller="Categories" asp-action="Index">Category</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="About">About Us</a></li>
                   
                     @if (User.Identity.IsAuthenticated)
                    {
                        <li><a asp-area="" asp-controller="" asp-action="">@User.FindFirst("Name")?.Value</a></li>

                        <form asp-controller="User" asp-action="Logout" method="post">
                            <button type="submit" class="nav-link text-dark" style="border: none; background: none;">Logout</button>
                        </form>
                    }
                    else
                    {
                        <li><a asp-area="" asp-controller="User" asp-action="Register">Register</a></li>
                        <li><a asp-area="" asp-controller="User" asp-action="Login">Login</a></li>
                    }
                     
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="icons"> <a href="#"><i class="lni lni-twitter-original"></i></a>  <a href="#"><i class="lni lni-facebook-fill"></i></a>  <a href="#"><i class="lni lni-instagram"></i></a></div>
        <div>Copyright &copy; 2021 Edwin Tjandraatmadja. All Rights Reserved </div>
     </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.querySelector('.my-burger-menu').addEventListener('click', function () {
            this.classList.toggle('active');
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>